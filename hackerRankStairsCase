<?php

/*
 * Complete the 'staircase' function below.
 *
 * The function accepts INTEGER n as parameter.
 */

function staircase($n) {
    // Write your code here   
    for($i=1;$i<=$n;$i++)
    {
        for($j=1;$j<=$n-$i;$j++)
        {
            $text= $text." ";
        }
        for($k=$n-$i;$k<=$n-1;$k++)
        {
            $text= $text."#";
        }
      echo $text.PHP_EOL;
       $text = '';
       
    }
    

}
